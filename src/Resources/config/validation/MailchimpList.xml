<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Setono\SyliusMailchimpPlugin\Model\MailchimpList">

        <property name="config">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_mailchimp.list.config.not_blank</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
        </property>

        <property name="name">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_mailchimp.list.name.not_blank</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">setono_sylius_mailchimp.list.name.min_length</option>
                <option name="maxMessage">setono_sylius_mailchimp.list.name.max_length</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
        </property>

        <property name="listId">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_mailchimp.list.list_id.not_blank</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
            <constraint name="Length">
                <option name="min">10</option>
                <option name="max">10</option>
                <option name="maxMessage">setono_sylius_mailchimp.list.list_id.min_length</option>
                <option name="maxMessage">setono_sylius_mailchimp.list.list_id.max_length</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
            <constraint name="Regex">
                <option name="message">setono_sylius_mailchimp.list.list_id.regex</option>
                <option name="pattern">/^[\w]*$/</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
        </property>

        <property name="storeId">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="maxMessage">setono_sylius_mailchimp.list.store_id.min_length</option>
                <option name="maxMessage">setono_sylius_mailchimp.list.store_id.max_length</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
            <constraint name="Regex">
                <option name="message">setono_sylius_mailchimp.list.store_id.regex</option>
                <option name="pattern">/^[\w-_]*$/</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
        </property>

        <property name="channels">
            <constraint name="Valid" />
        </property>

    </class>

</constraint-mapping>
