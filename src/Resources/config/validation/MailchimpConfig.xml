<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Setono\SyliusMailchimpPlugin\Model\MailchimpConfig">

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">code</option>
            <option name="message">setono_sylius_mailchimp.config.code.unique</option>
            <option name="groups">setono_sylius_mailchimp</option>
        </constraint>
        <property name="code">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_mailchimp.config.code.not_blank</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="maxMessage">setono_sylius_mailchimp.config.code.min_length</option>
                <option name="maxMessage">setono_sylius_mailchimp.config.code.max_length</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
            <constraint name="Regex">
                <option name="message">setono_sylius_mailchimp.config.code.regex</option>
                <option name="pattern">/^[\w-_]*$/</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
        </property>

        <property name="apiKey">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_mailchimp.config.api_key.not_blank</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
            <constraint name="Length">
                <option name="min">36</option>
                <option name="max">36</option>
                <option name="minMessage">setono_sylius_mailchimp.config.api_key.min_length</option>
                <option name="maxMessage">setono_sylius_mailchimp.config.api_key.max_length</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
            <constraint name="Regex">
                <option name="message">setono_sylius_mailchimp.config.api_key.regex</option>
                <option name="pattern">/^[\w-]*$/</option>
                <option name="groups">setono_sylius_mailchimp</option>
            </constraint>
        </property>

        <property name="lists">
            <constraint name="Valid" />
        </property>
    </class>

</constraint-mapping>
