<?xml version="1.0" encoding="utf-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="setono_sylius_mailchimp.api_client.factory"
                 class="Setono\SyliusMailchimpPlugin\ApiClient\MailchimpApiClientFactory">
        </service>

        <service id="setono_sylius_mailchimp.exporter.customer_newsletter"
                 class="Setono\SyliusMailchimpPlugin\Exporter\CustomerNewsletterExporter"
                 public="true">
            <argument type="service" id="setono_sylius_mailchimp.factory.export"/>
            <argument type="service" id="setono_sylius_mailchimp.repository.export"/>
            <argument type="service" id="sylius.repository.customer"/>
            <argument type="service" id="sylius.context.channel"/>
            <argument type="service" id="sylius.context.locale"/>
            <argument type="service" id="sylius.repository.locale"/>
            <argument type="service" id="setono_sylius_mailchimp.api_client.factory"/>
            <argument type="service" id="setono_sylius_mailchimp.manager.export"/>
            <argument type="service" id="setono_sylius_mailchimp.repository.list"/>
            <argument type="service" id="setono_sylius_mailchimp.manager.list"/>
            <argument>%setono_sylius_mailchimp.merge_fields%</argument>
        </service>

        <service id="setono_sylius_mailchimp.export_data_generator"
                 class="Setono\SyliusMailchimpPlugin\Exporter\ExportDataGenerator">
            <argument type="service" id="router"/>
            <argument type="service" id="sylius.currency_converter"/>
        </service>

        <service id="setono_sylius_mailchimp.exporter.customer_order"
                 class="Setono\SyliusMailchimpPlugin\Exporter\CustomerOrderExporter"
                 public="true">
            <argument type="service" id="setono_sylius_mailchimp.repository.list"/>
            <argument type="service" id="setono_sylius_mailchimp.export_data_generator"/>
            <argument type="service" id="setono_sylius_mailchimp.api_client.factory"/>
        </service>

        <service id="setono_sylius_mailchimp.handler.newsletter_subscription"
                 class="Setono\SyliusMailchimpPlugin\Handler\NewsletterSubscriptionHandler">
            <argument type="service" id="sylius.repository.customer"/>
            <argument type="service" id="sylius.factory.customer"/>
            <argument type="service" id="setono_sylius_mailchimp.repository.list"/>
            <argument type="service" id="setono_sylius_mailchimp.exporter.customer_newsletter"/>
            <argument type="service" id="sylius.context.locale"/>
            <argument type="service" id="sylius.context.channel"/>
        </service>
    </services>

</container>
