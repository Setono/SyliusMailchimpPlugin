<?xml version="1.0" encoding="utf-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="setono_sylius_mailchimp.event_listener.customer_listener"
                 class="Setono\SyliusMailchimpPlugin\EventListener\CustomerNewsletterListener">
            <argument type="service" id="sylius.repository.customer"/>
            <argument type="service" id="setono_sylius_mailchimp.repository.list"/>
            <argument type="service" id="setono_sylius_mailchimp.api_client.factory"/>
            <argument type="service" id="setono_sylius_mailchimp.exporter.customer_newsletter"/>
            <argument type="service" id="sylius.context.channel"/>
            <argument type="service" id="setono_sylius_mailchimp.context.locale"/>
            <argument type="service" id="logger"/>
            <argument type="collection">
                <argument>sylius_shop_register</argument>
                <argument>sylius_shop_account_profile_update</argument>
            </argument>

            <tag name="kernel.event_listener" event="kernel.terminate" method="manageSubscription"/>
        </service>

        <service id="setono_sylius_mailchimp.event_listener.order_listener"
                 class="Setono\SyliusMailchimpPlugin\EventListener\OrderListener">
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="setono_sylius_mailchimp.exporter.customer_order"/>
            <argument type="service" id="logger"/>
            <argument type="collection">
                <argument>sylius_shop_order_thank_you</argument>
            </argument>

            <tag name="kernel.event_listener" event="kernel.terminate" method="manageOrderSubscription"/>
        </service>
    </services>

</container>
