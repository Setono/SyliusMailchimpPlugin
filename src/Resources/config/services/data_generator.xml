<?xml version="1.0" encoding="utf-8"?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="setono_sylius_mailchimp.data_generator.order"
                 class="Setono\SyliusMailchimpPlugin\DataGenerator\OrderDataGenerator">
            <argument type="service" id="sylius.currency_converter"/>
        </service>

        <service id="setono_sylius_mailchimp.data_generator.store"
                 class="Setono\SyliusMailchimpPlugin\DataGenerator\StoreDataGenerator"/>

        <service id="setono_sylius_mailchimp.data_generator.product"
                 class="Setono\SyliusMailchimpPlugin\DataGenerator\ProductDataGenerator">
            <argument type="service" id="setono_sylius_mailchimp.data_generator.product_variant"/>
            <argument type="service" id="router"/>
        </service>

        <service id="setono_sylius_mailchimp.data_generator.product_variant"
                 class="Setono\SyliusMailchimpPlugin\DataGenerator\ProductVariantDataGenerator">
            <argument type="service" id="router"/>
        </service>
    </services>

</container>
